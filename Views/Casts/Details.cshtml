@model WebApp.Models.Casts

@{
    ViewData["Title"] = "Details";
}
<style media="screen">
    body {
        background-image: url( @ViewBag.backImg );
        height: 100%;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .bg-dark{
        background-color: @ViewBag.MainColor!important
    }
</style>
<h1>Details</h1>

<div>
    <h4>Casts</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstAppereance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstAppereance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastAppereance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastAppereance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Character)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index" asp-route-seriesID="@Model.Character.SeriesID">Back to List</a>
</div>
